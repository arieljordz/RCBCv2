@{
    ViewData["Title"] = "Login";
}
<div class="row d-flex justify-content-center" style="padding-top: 200px;">
    <div class="card">
        <div class="card-body bg-light-blue p-5">
            <div class="d-flex justify-content-center pl-3 pr-3 pt-3">
                <h2 class="h2-bold">RCBC DPU TELLERLESS PORTAL</h2>
            </div>
            <section class="p-5 bg-white">
                @using (Html.BeginForm("ConfirmedReset", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "formReset" }))
                {
                    <div class="d-flex justify-content-center">
                        <label>Please enter your username click reset button to reset your password.</label>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Enter your Username" name="Username" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-md col-md-12" id="btnReset">Reset</button>
                    </div>
                }
            </section>

        </div>
    </div>
</div>