@{
    ViewData["Title"] = "Login";
}
<div class="row d-flex justify-content-center" style="padding-top: 200px;">
    <div class="card">
        <div class="card-body bg-cyan p-5">
            <div class="d-flex justify-content-center pl-3 pr-3 pt-3">
                <h2>RCBC DPU TELLERLESS PORTAL</h2>
            </div>
            <section class="p-5 bg-white">
                @using (Html.BeginForm("SendResetPasswordLink", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "formLogin" }))
                {
                    <div class="d-flex justify-content-center">
                        <label>Forgot Password</label>
                    </div>
                    <div class="d-flex justify-content-center">
                        <label>We will be sending a reset password link to your email.</label>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Enter your USER ID" name="UserID" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-md col-md-12" id="btnSubmit">Submit</button>
                    </div>
                }
            </section>

        </div>
    </div>
</div>