@{
    ViewData["Title"] = "User Maintenance";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" style="padding-top: 60px;">

    <div class="pl-3 pr-3 pt-3">
        <label>Last Login: @ViewBag.DateNow.ToString("MMMM dd, yyyy HH:mm:ss")</label>
    </div>

    <div class="ln_solid"></div>
    <!-- Content Header (Page header) -->
    <div class="content-header pt-0 pb-0">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="">User Password Reset</a></li>
                        <li class="breadcrumb-item active">Maintenance</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <div class="d-flex justify-content-center">

                <div class="col-md-6">
                    <div class="card card-light-blue">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fa fa-user pr-2"></i>User Password Reset</h3>
                        </div>

                        <form id="frmReset" class="p-2" novalidate="novalidate">
                            <div class="card-body">
                                <input type="hidden" name="Id"/>
                                <div class="row mb-2">
                                    <div class="col-md-12">
                                        <label>User ID</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="usernameSearch">
                                            <span class="input-group-append">
                                                <button type="button" class="btn btn-info btn-flat" id="btnSearch"><i class="fa fa-search"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>User ID</label>
                                            <input type="text" name="UserId" class="form-control" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Employee Name</label>
                                            <input type="text" name="EmployeeName" class="form-control" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="text" name="Email" class="form-control" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Mobile Number</label>
                                            <input type="text" name="MobileNumber" class="form-control" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Group/Department</label>
                                            <input type="text" name="GroupDept" class="form-control" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Role</label>
                                            <input type="text" name="UserRole" class="form-control" readonly>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="card-footer">
                                <div class="d-flex justify-content-end">
                                    <button type="button" id="btnResetPassword" class="btn btn-primary">Regenerate Password</button>
                                    <button type="button" id="btnCancel" class="btn btn-danger ml-3">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div><!--/. container-fluid -->
    </section>

</div>
<!-- /.content-wrapper -->
@section Scripts
    {
    <script>
        $(document).ready(function () {

            $('#btnSearch').click(function () {
                $('#loading-image').show();
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("SearchUser", "Maintenance")',
                    data: {
                        "Username": $('#usernameSearch').val(),
                    },
                    success: function (response) {
                        $('#loading-image').hide();
                        if (response.success == true) {
                            $("[name='Id']").val(response.data.id);
                            $("[name='UserId']").val(response.data.userId);
                            $("[name='EmployeeName']").val(response.data.employeeName);
                            $("[name='Email']").val(response.data.email);
                            $("[name='MobileNumber']").val(response.data.mobileNumber);
                            $("[name='GroupDept']").val(response.data.groupDept);
                            $("[name='UserRole']").val(response.data.userRole);
                        }
                        else {
                            Swal.fire('Information!', 'No records found!.', 'info');
                        }
                    },
                    failure: function (response) {
                        $('#loading-image').hide();
                        alert(response.responseText);
                    },
                    error: function (response) {
                        $('#loading-image').hide();
                        alert(response.responseText);
                    }
                });
            });

            $('#usernameSearch').on('keyup', function (e) {
                if (e.key === 'Enter') {
                    $('#btnSearch').click();
                }
            });

            $('#btnResetPassword').click(function (e) {
                e.preventDefault();
                if ($("[name='UserId']").val() == "") {
                    Swal.fire('Warning!', 'Search user first.', 'warning');
                }
                else {
                    RegeneratePassword();
                }
            });

            $('#btnCancel').click(function () {
                $("#frmReset").trigger("reset");
            });

            function RegeneratePassword() {
                $('#loading-image').show();
                var formData = $("#frmReset").serialize();
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("RegeneratePassword", "Maintenance")',
                    data: formData,
                    success: function (response) {
                        $('#loading-image').hide();
                        if (response.success == true) {
                            console.log(response.password);
                            Swal.fire('Success!', 'New password sent to email.', 'success');
                            $("#frmReset").trigger("reset");
                        }
                        else {
                            Swal.fire('Error!', 'Failed generating new Password, Please try again!.', 'error');
                        }
                    },
                    failure: function (response) {
                        $('#loading-image').hide();
                        alert(response.responseText);
                    },
                    error: function (response) {
                        $('#loading-image').hide();
                        alert(response.responseText);
                    }
                });
            }

        });

        ActiveMenu("#maintenance");
        ActiveMenu("#reset_password");

    </script>
}

